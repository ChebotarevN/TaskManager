<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<VBox alignment="CENTER" minHeight="400.0" minWidth="600.0" prefWidth="600.0" spacing="10.0" xmlns="http://javafx.com/javafx/17.0.2-ea" xmlns:fx="http://javafx.com/fxml/1" fx:controller="app.tasklist.MainController">
    <padding>
        <Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
    </padding>
    <children>
      <ComboBox fx:id="workMode" maxHeight="1.7976931348623157E308" maxWidth="1.7976931348623157E308" promptText="Выберите способ работы таблицы" />
        <TableView fx:id="taskTable" maxHeight="1.7976931348623157E308" maxWidth="1.7976931348623157E308" prefHeight="200.0">
            <columns>
                <TableColumn fx:id="colId" prefWidth="50.0" text="ID" />
                <TableColumn fx:id="colName" prefWidth="150.0" text="Название" />
                <TableColumn fx:id="colDescription" prefWidth="100.0" text="Описание" />
                <TableColumn fx:id="colTime" prefWidth="150.0" text="Время" />
                <TableColumn fx:id="colStatus" prefWidth="130.0" text="Статус" />
            </columns>
         <columnResizePolicy>
            <TableView fx:constant="CONSTRAINED_RESIZE_POLICY" />
         </columnResizePolicy>
        </TableView>
        <HBox alignment="CENTER_RIGHT" prefHeight="100.0" prefWidth="200.0" spacing="10.0">
            <children>
                <Button mnemonicParsing="false" onAction="#handleAddProduct" text="Добавить" />
            <Button mnemonicParsing="false" onAction="#handleChangeProduct" text="Изменить" />
                <Button mnemonicParsing="false" onAction="#handleDeleteProduct" text="Удалить" />
            </children>
        </HBox>
    </children>
</VBox>
